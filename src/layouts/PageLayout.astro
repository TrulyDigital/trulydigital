---

import PageMetaTags from "../components/PageMetaTags/PageMetaTags.astro";
import Navigation from "../components/Navigation/Navigation.astro";
import Typography from "../components/Typography/Typography.astro";

import "../styles/global.css";

// props
const { metaTags } = Astro.props;

---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/webp" href="/favicon.webp">
  <Typography/>
  <PageMetaTags metaTags={metaTags} />
</head>
<body>
  <Navigation/>
  <slot/>
</body>
</html>


<style>
  body{
    font-family: 'Inter Roman', sans-serif;
  }
</style>