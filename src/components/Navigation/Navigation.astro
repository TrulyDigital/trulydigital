      <div>
        <button id="idCloseMenuMobile">
          <img src={mobileCloseButtonSrc} alt={mobileCloseButtonAlt}>
        </button>
      </div>
    </div>
    <!-- SideNav Menu -->
    <ul class="_sidenav_menu">
      {
        nav.menu.map((menuItem, index) => (
          // SideNav Menu Item
          <li class="_sidenav_menu_item">
            <button id={`idSideNavSubMenuButton${index}`}>
